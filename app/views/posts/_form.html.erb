<%= form_with model: @post do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    <% @post.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :body %><br>
    <%= f.textarea :body %>
    <% @post.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :status %><br>
    <%= f.select :status, Visible::VALID_STATUSES, selected: post.status %>
  </div>

  <div>
    <%= f.label :published_at %><br>
    <%= f.datetime_select :published_at, include_blank: true %>
  </div>
  
  <div>
    <%= f.submit %>
  </div>

<% end %>